<?php

namespace Src\Services;

use Src\Contracts\DiscountContract;

class Discount implements DiscountContract
{
    function __construct(public int $discountQuantity, public float $discountPrice)
    {
        
    }

    function calculateDiscant(int $totalQuantity): float
    {
        return ($totalQuantity / $this->discountQuantity) * $this->discountPrice;
    }
}